# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{rs,js,ts,json,yaml,yml,xml,html,css,scss}]
charset = utf-8

# Indentation override for all Rust files under src directory
# Note that rust analyzer will suggest this indent size anyway
[src/**.{rs}]
indent_style = space
indent_size = 4
